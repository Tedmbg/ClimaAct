<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/white">

    <!-- Sign Up Header Image -->
    <ImageView
        android:id="@+id/signUpHeaderImage"
        android:layout_width="0dp"
        android:layout_height="281dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sign Up CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/signUpCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/signUpHeaderImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your personal information"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray" />

            <!-- User Name EditText -->
            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="User Name"
                android:drawableLeft="@drawable/ic_user"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="16dp" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:drawableLeft="@drawable/ic_email"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="16dp" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="16dp" />

            <!-- Confirm Password EditText -->
            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/edit_text_background"
                android:drawablePadding="16dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/green"
                android:text="Sign up"
                android:textColor="@android:color/white" />

            <!-- Sign In Link -->
            <TextView
                android:id="@+id/textViewSignInLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Sign in"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
